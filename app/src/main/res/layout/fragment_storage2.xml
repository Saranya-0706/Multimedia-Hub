<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StorageFragment"
    android:background="@color/textViewBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <TextView
           android:id="@+id/txt"
           android:layout_width="match_parent"
           android:layout_height="80dp"
           android:text="INTERNAL STORAGE"
           android:textStyle="bold"
           android:textColor="@color/bluee"
           android:layout_marginTop="25dp"
           android:layout_marginBottom="35dp"
           android:gravity="center"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:orientation="vertical"
           >

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="80dp"
               android:background="@color/textViewBackground"
               android:layout_margin="2dp"
               android:elevation="8dp">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   >

                   <ImageView
                       android:id="@+id/img"
                       android:layout_width="65dp"
                       android:layout_height="65dp"
                       android:layout_centerVertical="true"
                       android:layout_marginStart="5dp"
                       android:layout_marginTop="5dp"
                       android:layout_marginEnd="5dp"
                       android:layout_marginBottom="5dp"
                       android:padding="15dp"
                       android:src="@drawable/image_picture_svgrepo_com"
                       app:tint="@color/bluee" />

                   <LinearLayout
                       android:layout_width="350dp"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:layout_toEndOf="@id/img"
                       android:layout_marginStart="15dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:padding="10dp"
                       android:text="IMAGES"
                       android:textColor="@color/textColor"
                      android:textStyle="bold"
                       />

                       <TextView
                           android:id="@+id/imageSize"
                           android:layout_width="match_parent"
                           android:layout_height="35dp"
                           android:padding="10dp"
                           android:text="size"
                           android:textColor="@color/textColor"
                           />


                   </LinearLayout>


               </RelativeLayout>
           </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:elevation="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/vid"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        app:tint="@color/bluee"
                        android:padding="15dp"
                        android:src="@drawable/video" />

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/vid"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:padding="10dp"
                            android:text="ViDEOS"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/videoSize"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:padding="10dp"
                            android:text="size"
                            android:textColor="@color/textColor"
                            />

                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:elevation="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/music"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        app:tint="@color/bluee"
                        android:padding="15dp"
                        android:src="@drawable/music_note_2_svgrepo_com" />

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/music"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:padding="10dp"
                            android:text="MUSIC"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/musicSize"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:padding="10dp"
                            android:text="size"
                            android:textColor="@color/textColor"
                            />

                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:elevation="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/pdf"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        app:tint="@color/bluee"
                        android:padding="15dp"
                        android:src="@drawable/pdf_file_svgrepo_com" />

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/pdf"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:padding="10dp"
                            android:text="PDFs"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/pdfSize"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:padding="10dp"
                            android:text="size"
                            android:textColor="@color/textColor"
                            />

                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>